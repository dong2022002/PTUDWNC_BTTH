@model PostFilterModel
@{
	ViewData["PageTitle"] = "Danh sách bài viết";

	var postsList = ViewBag.PostsList as IPagedList<Post>;
}

<h1>
	Danh sách bài viết
</h1>
<partial name="_PostFilterPane" model="Model" />
@if (postsList != null && postsList.Count > 0)
{
	<table class="table table-responsive table-striped">
		<thead>
			<tr>
				<th>Tiêu đề</th>
				<th>Tác giả</th>
				<th>Chủ đề</th>
				<th>Xuất bản</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var post in postsList)
			{
				<tr>
					<td>
						<a asp-area="Admin"
				   asp-controller="Posts"
				   asp-action="Edit"
				   asp-route-id="@post.Id"
			   class="text-body">
							@post.Title
						</a>

						<p class="text-muted">
							@post.ShortDescription
						</p>
					</td>
					<td>
						@post.Author.FullName
					</td>
					<td>
						@post.Category.Name
					</td>
					
					<td>
						<Form asp-area="Admin"
				  asp-controller="Posts"
				  asp-action="setPublished"
				  asp-route-id="@post.Id"
			  enctype="multipart/form-data"
			  method="post">
						<div class="form-check">
								<input class="form-check-input"
								type="checkbox"
							   asp-for="@post.Published"
							   onchange="this.form.submit()"/>
						</div>
				   </Form>
				   </td>

					<td>
						<a asp-area="Admin"
				   asp-controller="Posts"
				   asp-action="DeletePost"
				   asp-route-id="@post.Id"
			   class="btn btn-danger">
							<i class="fa fa-trash-o"  aria-hidden="true"></i>

						</a>
					</td>

				</tr>
			}
		</tbody>
	</table>
	<partial name="_Page" model="postsList" />
}
else
{
	<h1 class="text-danger">
		Không tìm thấy bài viết nào
	</h1>
}