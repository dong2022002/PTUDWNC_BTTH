@model CategoryFilterModel

<form asp-area="Admin"
	  asp-controller="Posts"
	  asp-action="Index"
   method="get"
   class="row gy-2 gx-3 align-items-center">
	<div class="col-auto">
		<label class="visually-hidden" asp-for="keyword"></label>
		<input type="text"
	  class="form-control"
			   asp-for="keyword"
	  placeholder="Nhập từ khóa ..." />

	</div>
	<div class="col-auto">
		<label class="visually-hidden" asp-for="isShowOnMenu"></label>
		<input type="checkbox"
				title=""
				asp-for="isShowOnMenu"
				/>
		<label class="text-secondary">Xuất hiện trên thanh menu</label>
		
	</div>
	<div class="col-auto">
		<button type="submit" class="btn btn-primary">Tìm/Lọc</button>
		<a	asp-area="Admin"
			asp-controller="Posts"
			asp-action="Edit"
			class="btn btn-success">
			Thêm mới
		</a>
		<a asp-area="Admin"
		   asp-controller="Posts"
		   asp-action="DefaultFilter"
	 class="btn btn-success">
			Bỏ lọc
		</a>
	</div>
	


</form>
