@model AuthorFilterModel
@{
	ViewData["PageTitle"] = "Danh sách tác giả";

	var authorsList = ViewBag.AuthorList as IPagedList<AuthorItem>;
}

<h1>
	Danh sách Tác giả
</h1>
<partial name="_AuthorsFilterPane" model="Model" />
@if (authorsList != null && authorsList.Count > 0)
{
	<table class="table table-responsive table-striped">
		<thead>
			<tr>
				<th>Tên tác giả</th>
				<th>Email</th>
				<th>Thời gian tham gia</th>
				<th>Số bài viết</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var author in authorsList)
			{
				<tr>
					<td>
						<a asp-area="Admin"
				   asp-controller="Categories"
				   asp-action="Edit"
				   asp-route-id="@author.Id"
			   class="text-body">
							@author.FullName
						</a>
					</td>
					<td>
						@author.Description
					</td>
					<td>
						<Form asp-area="Admin"
					  asp-controller="Categories"
					  asp-action="setPublished"
					  asp-route-id="@author.Id"
					  asp-route-model=@Model
			   enctype="multipart/form-data"
			   method="post">
							<div class="form-check">
								<input class="form-check-input"
							   type="checkbox"
							   asp-for="@author.ShowOnMenu"
				  onchange="this.form.submit()" />
							</div>
						</Form>
					</td>

					<td>

						<label>@author.PostCount</label>
					</td>

					<td>
						<a asp-area="Admin"
				   asp-controller="Categories">
							@Html.ActionLink("Delete", "DeleteCat", new { id = author.Id },
					new {onclick = "return confirm('Are sure wants to delete?');"})
							<i class="fa fa-trash-o"></i>
						</a>
					</td>

				</tr>
			}
		</tbody>
	</table>
	<partial name="_Page" model="authorsList" />
}
else
{
	<h1 class="text-danger">
		Không tìm thấy bài viết nào
	</h1>
}
