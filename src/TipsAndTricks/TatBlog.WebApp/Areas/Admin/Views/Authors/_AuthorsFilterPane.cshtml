@model AuthorFilterModel

<form asp-area="Admin"
	  asp-controller="Authors"
	  asp-action="Index"
   method="get"
   class="row gy-2 gx-3 align-items-center">
	<div class="col-auto">
		<label class="visually-hidden" asp-for="keyword"></label>
		<input type="text"
	  class="form-control"
			   asp-for="keyword"
	  placeholder="Nhập từ khóa ..." />

	</div>
	<div class="col-auto">
		<label class="visually-hidden" asp-for="Year"></label>
		<input type="text"
	  class="form-control"
			   asp-for="Year"
	  placeholder="Nhập năm ..." />
	</div>
	<div class="col-auto">
		<label class="visually-hidden" asp-for="Month"></label>
		<select type="form-select"
				asp-for="Month"
				asp-items="Model.MonthList">
			<option value="" selected>
				-- Chọn tháng --
			</option>
		</select>
	</div>

	<div class="col-auto">
		<button type="submit" class="btn btn-primary">Tìm/Lọc</button>
		<a asp-area="Admin"
		   asp-controller="Authors"
		   asp-action="Edit"
	 class="btn btn-success">
			Thêm mới
		</a>
		<a asp-area="Admin"
		   asp-controller="Authors"
		   asp-action="DefaultFilter"
	 class="btn btn-success">
			Bỏ lọc
		</a>
	</div>



</form>
