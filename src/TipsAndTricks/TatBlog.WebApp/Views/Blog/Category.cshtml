@model IPagedList<Post>
@{
	ViewData["PageTitle"] = "Chủ đề";

	var nameCat = (ViewBag.NameCat as string) ?? "Không tìm thấy chủ đề";
}

<div class="p-4">
	@if (!string.IsNullOrWhiteSpace(nameCat))
	{
		<h3 class="text-primary mb-3">
			Những bài viết thuộc chủ đề '@nameCat'
		</h3>
	}

	@foreach (var postItem in Model)
	{
		<partial name="_PostList" model="postItem" />
	}
	<partial name="_Pager" model="@Model" />
</div>