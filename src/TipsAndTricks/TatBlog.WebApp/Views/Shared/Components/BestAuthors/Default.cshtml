@model IList<AuthorItem>

<div class="mb-8">
	<h3 class="text-success mb-2">
		Các tác giả
	</h3>

	<ul class="list-group">
		@foreach (var item in Model)
		{
			<li class="list-group-item">
				<a class="text-decoration-none"
			   asp-controller="Blog"
			   asp-action="author"
			   asp-route-slug="@item.UrlSlug"
				title="@item.FullName">
					@item.FullName
					<span>(@item.PostCount)</span>

				</a>
			</li>
		}
	</ul>
</div>